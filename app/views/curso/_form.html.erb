    <%= f.label :"Metas" %><br>
    <%= f.text_area :metas%>
  </div>
  <div class="field">
    <%= f.label :"Dirigido a" %><br>
    <%= f.text_area :dirigidoA%>
  </div>
  <div class="field">
    <%= f.label :"Campo de conocimiento" %><br>
    <%= f.text_area :campoConocimiento%>
  </div>
  <div class="field">
    <%= f.label :"Procesos de evaluación" %><br>
    <%= f.text_area :procesoEvaluacion%>
  </div>
  <div class="field">
    <%= f.label :"Requsitos de ingreso" %><br>
    <%= f.text_area :requisitosIngreso%>
  </div>
