<%= form_for @curso, url:{controller: "curso", action: @action}, :method => :POST  do |f| %>
  <% if @curso.errors.any? %>
    <div id="error_nuevo_curso">
      <h2><%= pluralize(@curso.errors.count, "error") %> Error en los campos:</h2>

      <ul>
      <% @curso.errors.full_messages.each do |mensaje| %>
        <li><%= mensaje %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"Tipo de actividad académica" %><br>
    <%= f.text_field :tipo, placeholder: "Tipo de actividad académica:" %>
  </div>
  <div class="field">
    <%= f.label :"Modalidad" %><br>
    <%= f.text_field :modalidad, placeholder: "Modalidad" %>
  </div>
  <div class="field">
    <%= f.label :"Fechas" %><br>
    <%= f.text_area :fechas %>
  </div>
  <div class="field">
    <%= f.label :"Dias Horarios" %><br>
    <%= f.text_field :diasHorario %>
  </div>
  <div class="field">
    <%= f.label :"Lugar" %><br>
    <%= f.text_field :lugar, placeholder: "Lugar" %>
  </div>
  <div class="field">
    <%= f.label :"Número sesiones" %><br>
    <%= f.number_field :numeroSesiones, placeholder: "Número de sesiones"%>
  </div>
  <div class="field">
    <%= f.label :"Número horas" %><br>
    <%= f.number_field :numeroHoras, placeholder: "Número de horas"%>
  </div>
  <div class="field">
    <%= f.label :"Minimo de inscritos" %><br>
    <%= f.number_field :minInscritos,  placeholder: "Minimo de inscritos"%>
  </div>
    <div class="field">
    <%= f.label :"Maximo de inscritos" %><br>
    <%= f.number_field :maxInscritos,  placeholder: "Maximo de inscritos"%>
