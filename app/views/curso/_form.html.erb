    <%= f.number_field :costoPublicoGeneral, placeholder: "Costo publico general"%>
  </div>
  <div class="field">
    <%= f.label :"Costo alumnos/tesitas/personal UNAM" %><br>
    <%= f.number_field :costoUNAM,  placeholder: "Costo UNAM"%>
  </div>
